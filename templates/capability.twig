{% extends "base.twig" %}

{% block content %}

	<article class="article capabilities post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
		<section class="article-content container margin-both">
      <div class="article-header capabilities">
        <p class="level-5">{{ post.parent }}</p>
				<h1 class="level-2">{{ post.title }}</h1>
      </div>

			<div class="article-body">
        <div class="main">
				  {{ post.content }}
        </div>
			</div>

      <div class="container margin-both back">
        <a href="{{ post.parent.link ?? '/work' }}" class="button">Back</a>
      </div>
		</section>
  </article>

  {% include "/templates/components/flexible-content-modules.twig" %}

{% endblock %}
